// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  login_id          String   @unique
  name              String
  password          String
  theme             String   @default("default")
  last_login        DateTime
  created_at        DateTime
  is_admin          Boolean  @default(false)
  use_allstar       Boolean  @default(true)
  use_key_selection Boolean  @default(true)
}

model Product {
  id   Int    @id @default(autoincrement())
  name  String
  product_no String
  product_type String
  last_fetched  DateTime?
  last_converted  DateTime?
  sort  Int
  processing  Boolean
}

model Color {
  id   Int    @id @unique
  slug String
}

model Card {
  id         Int     @id @default(autoincrement())
  slug       String  @unique
  name       String
  pronounce  String
  img        String
  card_type  String
  lrig       String
  level      String
  color      String
  klass      String
  cost       String
  limit      String
  power      String
  team       String
  team_piece Boolean
  timing     String
  rarity     String
  has_lb     Boolean
  lb_text    String?
  skills     String
  story      String
  format     Int
  coin       String  @default("")
}

model ExtendParameterSetting {
  id     Int    @id @default(autoincrement())
  slug   String
  json   String
  method String
}

model ColorCard {
  id    Int @id @default(autoincrement())
  card  Int
  color Int
}

model Deck {
  id          Int      @id @default(autoincrement())
  name        String
  source      String
  is_deck     Boolean
  lrig        String
  assists     String
  is_public   Boolean
  ancestor   Int?
  owner       Int
  format      Int
  tags        String
  description String
  created_at  DateTime
}
